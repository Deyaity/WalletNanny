exports.handler = (event, context) => {

    try {

        if (event.session.new) {
            // New Session
            console.log("NEW SESSION")
        }

        switch (event.request.type) {

            case "LaunchRequest":
                // > Launch Request
                console.log('LAUNCH REQUEST')
                context.succeed(
                    generateResponse(
                        buildSpeechletResponse("Welcome to your Alexa SKill, Guillermo the master of Amazon, this is running on a deployed lambda function you created for me master. What would you like me to do?", true),
                        {}
                    )
                )
                break;

            case "IntentRequest":
                // > Intent Request
                console.log('SESSION ENDED REQUEST')
                context.succeed(
                    generateResponse(
                        buildSpeechletResponse("What are your wages and hours for the shift?", true)
                    )
                )

                switch(event.request.intent.name) {

                    //case "AddJob":
                      //  var wages =




                        //    }



                        }



                break;

            case "SessionEndedRequest":
                // > Session Ended Request
                console.log('SESSION ENDED REQUEST')
                break;

            default:
                context.fail('INVALID REQUEST TYPE: ${event.request.type}')

        }

    } catch(error) {context.fail('Exeption: ${error}')}
}





buildSpeechletResponse = (outputText, shouldEndSession) => {

    return {
        outputSpeech: {
            type: "PlainText",
            text: outputText
        },
        shouldEndSession: shouldEndSession
    }

}

generateResponse = (speechletResponse, sessionAttributes) => {

    return {
        version: "1.0",
        sessionAttributes: sessionAttributes,
        response: speechletResponse
    }

}
